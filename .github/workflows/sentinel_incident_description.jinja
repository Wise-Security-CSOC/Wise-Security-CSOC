<!DOCTYPE html>
<html>
  <head>
    <title>Plantilla Jinja2</title>
  </head>
  <body>
    {% for key, value in incident_description.items() %}
      {% if 'content' in value %}
        <u><h3>{{ key }}</h3></u>
        <p>
          {{ value['content'] }}
        </p>
      {% elif 'columns' in value %}
        <u><h3>{{ key }}</h3></u>
        <p>
          {{ value['heading'] }}
          <table>
            <tr>
              {% for column in value['columns'] %}
                <th>{{ column }}</th>
              {% endfor %}
            </tr>
            {% for row in value['content'] %}
              <tr>
                {% for cell in row %}
                  <td>{{ cell }}</td>
                {% endfor %}
              </tr>
            {% endfor %}
          </table>
          {{ value['footer'] }}
        </p>
      {% endif %}
    {% endfor %}
  </body>
</html>
